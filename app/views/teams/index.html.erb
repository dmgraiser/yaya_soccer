<% if can? :manage, :all %>
<div class="teams-page">
  <h1>Listing teams</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Article</th>
        <th>Wins</th>
        <th>Loses</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><%= team.name %></td>
          <td><%= team.article_id %></td>
          <td><%= team.wins %></td>
          <td><%= team.loses %></td>
          <td><%= link_to 'Show', team %></td>
          <td><%= link_to 'Edit', edit_team_path(team) %></td>
          <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Team', new_team_path %>
</div>
<% else %>
  <div class="players-page not-allowed">
    <p>Sorry, you're not allowed here :-(</p>
  </div>
<% end %>