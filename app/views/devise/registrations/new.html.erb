<style type="text/css">
  #login {
    margin-left: -100px;
    margin-right: -100px;
    height: 600px;
    background: url(<%= asset_path "loginbg.jpeg" %>) no-repeat;
    background-size: cover;
  }

  .text-box{
    background: rgba(250, 250, 250, .5);
  }
</style>

<div id="login">
  <br />
  <br />
  <br />
  <br />

  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-box">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-user"></span><%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control input-lg" %>
        </div>

        <br />

        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-envelope"></span><%= f.email_field :email, placeholder: "Email", class: "form-control input-lg" %>
        </div>

        <br />

        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-lock"></span>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control input-lg" %>
          <br /><% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>

        <br />

        <div class="input-group">
          <span class="input-group-addon glyphicon glyphicon-lock"></span>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "form-control input-lg" %>
        </div>

        <br />

        <div class="field">
          <h4><%= f.check_box :parental_approval %> <%= f.label "Do you have your parent's permission?" %></h4>
        </div>

        <div class="field">
          <h4><%= f.check_box :editor %> <%= f.label :editor %></h4>
        </div>

        <div class="field">
          <h4><%= f.check_box :publisher %><%= f.label :publisher %></h4>
        </div>

        <div>
          <%= f.submit "Sign up", class: "btn btn-success" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      <br />

    </div>
  </div>
</div>
