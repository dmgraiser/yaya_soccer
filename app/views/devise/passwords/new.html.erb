<div>
  <br />
  <br />
  <br />
  <br />

  <div class="row">
    <div class="col-md-4 col-md-offset-4 text-box">
			<h2>Forgot your password?</h2>

			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="input-group">
			    <span class="input-group-addon glyphicon glyphicon-envelope"></span><%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Email" %>
			  </div>

			  <br />
			  
			  <div class="actions">
			    <%= f.submit "Send me reset password instructions", class: "btn btn-success btn-lg" %>
			  </div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>
